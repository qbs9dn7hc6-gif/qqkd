    const quizEl = document.getElementById("quiz");
    const resultEl = document.getElementById("result");
    const restartBtn = document.getElementById("restartBtn");

    let current = 0;
    let score = 0;

    function loadQuestion() {
      if (current >= quizData.length) {
        quizEl.innerHTML = "";
        resultEl.classList.remove("hidden");
        resultEl.textContent = `ğŸ‰ í€´ì¦ˆ ì™„ë£Œ! ë‹¹ì‹ ì˜ ì ìˆ˜ëŠ” ${score} / ${quizData.length}ì ì…ë‹ˆë‹¤.`;
        restartBtn.classList.remove("hidden");
        return;
      }
      const q = quizData[current];
      quizEl.innerHTML = `
        <div class="question">${q.q}</div>
        <div class="options">
          ${q.a.map((opt, i) => `<button onclick="selectOption(${i})">${opt}</button>`).join("")}
        </div>
      `;
    }

    window.selectOption = function(i) {
      if (i === quizData[current].correct) score++;
      current++;
      loadQuestion();
    };

    restartBtn.onclick = function() {
      current = 0;
      score = 0;
      resultEl.classList.add("hidden");
      restartBtn.classList.add("hidden");
      loadQuestion();
    };

    loadQuestion();
